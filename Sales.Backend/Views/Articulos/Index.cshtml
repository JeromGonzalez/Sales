@model IEnumerable<Sales.Common.Models.Articulos>

@{
    ViewBag.Title = "Index";
}

<h2>Articulos</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RutaImagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PVP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAlata)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentario)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.RutaImagen ))
            {
                <img src = "@Url.Content(item.RutaImagen ) " alt = "Image" style = " width : 100px ; height : 150px ; max-width : 100% ; height : auto ; " />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PVP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaAlata)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CodProducto }, new { @class="btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id = item.CodProducto }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CodProducto }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
